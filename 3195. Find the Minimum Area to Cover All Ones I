class Solution:
    def minimumArea(self, grid: List[List[int]]) -> int:
        m, n = len(grid), len(grid[0])   # rows and cols

        # initialize rectangle boundaries
        top, bottom = m, -1
        left, right = n, -1

        # scan the grid to find the min/max row and col containing 1
        for i in range(m):
            for j in range(n):
                if grid[i][j] == 1:
                    top = min(top, i)
                    bottom = max(bottom, i)
                    left = min(left, j)
                    right = max(right, j)

        # area = height * width
        return (bottom - top + 1) * (right - left + 1)
